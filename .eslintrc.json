{
  "extends": [
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "no-undef": "off",
    "no-unused-vars": "off",
    "arrow-parens": ["warn", "as-needed"],
    "prettier/prettier": ["warn"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}

